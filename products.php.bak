	$stmt->bindValue(1, $order, PDO::PARAM_STR);
	#$stmt->bindValue(2, $direction, PDO::PARAM_STR);
}

$stmt->execute();

$products = $stmt->fetchAll(PDO::FETCH_ASSOC);
